# Cache static assets (images, css, js) for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML pages for 1 hour (revalidate more often)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate
